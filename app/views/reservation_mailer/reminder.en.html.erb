<!-- app/views/reservation_mailer/reminder.en.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Reservation Reminder</title>
  <style>
    body { 
      font-family: Arial, sans-serif; 
      line-height: 1.6; 
      color: #333; 
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
    }
    .header { 
      background: #28a745; 
      color: white; 
      padding: 20px; 
      text-align: center; 
      border-radius: 8px 8px 0 0;
    }
    .content { 
      padding: 20px; 
      background: #f8f9fa; 
      border-radius: 0 0 8px 8px;
    }
    .reservation-details { 
      background: white; 
      padding: 20px; 
      border-radius: 8px; 
      margin: 15px 0;
      border-left: 4px solid #28a745;
    }
    .urgent {
      background: #fff3cd;
      padding: 15px;
      border-radius: 8px;
      border-left: 4px solid #ffc107;
      margin: 15px 0;
    }
    .footer { 
      padding: 20px; 
      text-align: center; 
      color: #666; 
      font-size: 14px;
      background: #e9ecef;
      border-radius: 8px;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1>üîî <%= @salon_name %></h1>
    <h2>Tomorrow's Reservation Reminder</h2>
  </div>
  
  <div class="content">
    <p>Dear <strong><%= @user.name %></strong>,</p>
    
    <p>Thank you for your continued patronage.<br>
    This is a reminder about your appointment tomorrow.</p>
    
    <div class="urgent">
      <h3>‚è∞ Tomorrow's Appointment</h3>
      <p style="font-size: 18px; margin: 0;"><strong><%= @reservation.start_time.strftime('%B %d (%a) at %H:%M') %> - <%= @reservation.end_time.strftime('%H:%M') %></strong></p>
    </div>
    
    <div class="reservation-details">
      <h3>üìÖ Reservation Details</h3>
      <table style="width: 100%; border-collapse: collapse;">
        <tr>
          <td style="padding: 8px 0; font-weight: bold; width: 120px;">Date & Time:</td>
          <td style="padding: 8px 0;"><%= @reservation.start_time.strftime('%B %d, %Y at %H:%M') %> - <%= @reservation.end_time.strftime('%H:%M') %></td>
        </tr>
        <tr>
          <td style="padding: 8px 0; font-weight: bold;">Course:</td>
          <td style="padding: 8px 0;"><%= @reservation.course %></td>
        </tr>
        <% if @reservation.note.present? %>
        <tr>
          <td style="padding: 8px 0; font-weight: bold;">Notes:</td>
          <td style="padding: 8px 0;"><%= @reservation.note %></td>
        </tr>
        <% end %>
      </table>
    </div>
    
    <div style="background: #d1ecf1; padding: 15px; border-radius: 8px; border-left: 4px solid #17a2b8;">
      <h4>üìû Cancellation & Changes</h4>
      <p>If you need to cancel or change your appointment time,<br>
      please contact us <strong>as soon as possible</strong>.</p>
    </div>
    
    <p>We apologize for the inconvenience, but please confirm your appointment.<br>
    We look forward to seeing you tomorrow.</p>
  </div>
  
  <div class="footer">
    <p><strong><%= @salon_name %></strong><br>
    TEL: 080-9692-1177<br>
    Email: mobilis.stretch@gmail.com<br>
    Business Hours: 10:00 - 20:00</p>
  </div>
</body>
</html>
