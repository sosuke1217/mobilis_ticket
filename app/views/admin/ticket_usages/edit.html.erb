<div class="container-lg my-5">
  <div class="card shadow-sm">
    <div class="card-header bg-dark text-white fw-bold">
      <h4 class="mb-0">施術メモの編集</h4>
    </div>

    <div class="card-body">
      <%= form_with model: [:admin, @usage], local: true do |f| %>
        <div class="mb-3">
          <%= f.label :note, "施術メモ", class: "form-label" %>
          <%= f.text_area :note, class: "form-control", rows: 6, placeholder: "例：肩の可動域を広げるよう重点的に。左右差に注意。" %>
        </div>

        <div class="mt-4">
          <%= f.submit "保存", class: "btn btn-primary me-2" %>
          <%= link_to "キャンセルして戻る", admin_user_path(@usage.user), class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
