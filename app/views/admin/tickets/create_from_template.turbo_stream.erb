<% if @active_tickets_before == 0 %>
  <%= turbo_stream.update "active_ticket_section" do %>
    <%= render partial: "admin/tickets/partials/ticket_table", locals: { tickets: [@ticket] } %>
  <% end %>
<% else %>
  <%= turbo_stream.remove "ticket_#{@ticket.id}" %>
  <%= turbo_stream.append "active_ticket_table_body" do %>
    <%= render partial: "admin/tickets/partials/ticket_row", locals: { ticket: @ticket } %>
  <% end %>
<% end %>
