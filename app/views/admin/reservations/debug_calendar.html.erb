<!DOCTYPE html>
<html>
<head>
  <title>Calendar Debug</title>
  <meta name="business-hours-start" content="10">
  <meta name="business-hours-end" content="20">
  <meta name="slot-interval" content="30">
  <meta name="reservation-interval" content="15">
  <meta name="sunday-closed" content="true">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <%= javascript_importmap_tags %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <div class="container mt-4">
    <h1>🔧 Calendar Debug Page</h1>
    
    <div class="row mb-4">
      <div class="col">
        <button class="btn btn-primary" onclick="testModal()">
          <i class="fas fa-plus me-1"></i>テストモーダル
        </button>
        <button class="btn btn-success" onclick="testCalendar()">
          <i class="fas fa-calendar me-1"></i>カレンダーテスト
        </button>
        <button class="btn btn-info" onclick="checkFullCalendar()">
          <i class="fas fa-check me-1"></i>FullCalendar確認
        </button>
      </div>
    </div>
    
    <div id="calendar"></div>
  </div>

  <!-- テスト用モーダル -->
  <div class="modal fade" id="testModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">テストモーダル</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p>モーダルが正常に動作しています！</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    console.log('🧪 Debug page loaded');
    
    function testModal() {
      console.log('🔧 Testing modal...');
      const modal = new bootstrap.Modal(document.getElementById('testModal'));
      modal.show();
    }
    
    function testCalendar() {
      console.log('🔧 Testing calendar...');
      if (window.pageCalendar) {
        console.log('✅ Calendar instance found');
        console.log('📅 Calendar events:', window.pageCalendar.getEvents().length);
      } else {
        console.log('❌ No calendar instance found');
      }
    }
    
    function checkFullCalendar() {
      console.log('🔧 Checking FullCalendar...');
      console.log('🔍 typeof FullCalendar:', typeof FullCalendar);
      console.log('🔍 window.FullCalendar:', window.FullCalendar);
      
      if (typeof FullCalendar !== 'undefined') {
        console.log('✅ FullCalendar is available');
      } else {
        console.log('❌ FullCalendar not available');
      }
    }
    
    // ページ読み込み時のテスト
    document.addEventListener('DOMContentLoaded', function() {
      console.log('📅 DOM loaded, running tests...');
      checkFullCalendar();
      
      // カレンダーが初期化されるまで少し待つ
      setTimeout(() => {
        testCalendar();
      }, 2000);
    });
  </script>
</body>
</html> 