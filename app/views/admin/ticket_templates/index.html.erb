<div class="container-xl my-5">
  <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
    <h1 class="mb-0">テンプレート一覧</h1>
    <%= link_to new_admin_ticket_template_path, class: "btn btn-dark btn-sm mt-2 mt-md-0" do %>
      <i class="fas fa-plus me-1"></i> 新規テンプレート作成
    <% end %>
  </div>

  <div class="card shadow-sm">
    <div class="table-responsive">
      <table class="table table-hover table-bordered align-middle mb-0">
        <thead class="table-dark text-center">
          <tr>
            <th style="width: 35%;">名前</th>
            <th style="width: 15%;">回数</th>
            <th style="width: 20%;">有効期間（日数）</th>
            <th style="width: 30%;">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @templates.each do |template| %>
            <tr>
              <td><%= template.name %></td>
              <td class="text-center"><%= template.total_count %></td>
              <td class="text-center"><%= template.expiry_days %> 日</td>
             <td class="text-center">
                <div class="d-flex justify-content-center gap-2">
                  <%= link_to edit_admin_ticket_template_path(template),
                      class: "btn btn-outline-secondary btn-sm" do %>
                    <i class="fas fa-edit me-1"></i> 編集
                  <% end %>

                  <%= button_to "削除", admin_ticket_template_path(template),
                      method: :delete,
                      form: { data: { turbo_stream: true } },
                      data: { confirm: "本当に削除しますか？" },
                      class: "btn btn-outline-danger btn-sm" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
