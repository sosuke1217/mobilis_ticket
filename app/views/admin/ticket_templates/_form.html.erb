<%= form_with model: [:admin, template], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, "テンプレート名", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :total_count, "回数", class: "form-label" %>
    <%= f.number_field :total_count, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :expiry_days, "有効日数（例：30）", class: "form-label" %>
    <%= f.number_field :expiry_days, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :price, "価格（円）", class: "form-label" %>
    <%= f.number_field :price, class: "form-control" %>
  </div>

  <%= f.submit "更新", class: "btn btn-primary" %>
<% end %>
