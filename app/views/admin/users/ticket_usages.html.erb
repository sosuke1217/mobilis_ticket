<div class="container-lg my-5">
  <h1 class="mb-4">
    <%= @user.name || @user.line_user_id %> さんのチケット使用履歴
  </h1>

  <div class="mb-3">
    <%= link_to "ユーザー詳細に戻る", admin_user_path(@user), class: "btn btn-outline-secondary" %>
  </div>

  <%= search_form_for @q, url: request.path, method: :get, html: { class: "row g-3 align-items-end mb-4" } do |f| %>
    <div class="col-md-4">
      <%= f.label :ticket_title_cont, "チケット名", class: "form-label" %>
      <%= f.text_field :ticket_title_cont, class: "form-control", placeholder: "例: 10回券" %>
    </div>
    <div class="col-md-auto d-flex align-items-end">
      <%= f.submit "検索", class: "btn btn-primary me-2" %>
      <%= link_to "リセット", request.path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>

  <table class="table table-hover table-striped align-middle">
    <thead class="table-light">
      <tr>
        <th>使用日</th>
        <th>チケット名</th>
        <th>残回数</th>
        <th>メモ</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @usages.each do |usage| %>
        <tr>
          <td><%= usage.used_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= usage.ticket.title %></td>
          <td><%= usage.ticket.remaining_count %> 回</td>
          <td><%= usage.note.present? ? truncate(usage.note, length: 30) : "—" %></td>
          <td>
            <%= link_to "メモを見る・編集", edit_admin_ticket_usage_path(usage), class: "btn btn-sm btn-outline-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3">
    <%= paginate @usages %>
  </div>
</div>
