<div class="container-lg my-5">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <div class="d-flex justify-content-between align-items-center">
        <h2 class="h5 mb-0">
          <i class="fas fa-history me-2"></i>
          <%= @user.name %> さんのチケット使用履歴
        </h2>
        <div>
          <%= link_to admin_user_path(@user), class: "btn btn-outline-light btn-sm me-2" do %>
            <i class="fas fa-user me-1"></i>ユーザー詳細
          <% end %>
          <%= link_to admin_users_path, class: "btn btn-outline-light btn-sm" do %>
            <i class="fas fa-list me-1"></i>ユーザー一覧
          <% end %>
        </div>
      </div>
    </div>

    <div class="card-body">
      <!-- ユーザー情報サマリー -->
      <div class="row mb-4">
        <div class="col-md-6">
          <div class="card bg-light">
            <div class="card-body">
              <h6 class="card-title">ユーザー情報</h6>
              <p class="mb-1"><strong>名前:</strong> <%= @user.name %></p>
              <p class="mb-1"><strong>会員番号:</strong> <%= @user.id %></p>
              <p class="mb-0"><strong>総使用回数:</strong> <%= @user.ticket_usages.count %> 回</p>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card bg-light">
            <div class="card-body">
              <h6 class="card-title">現在の状況</h6>
              <p class="mb-1"><strong>残チケット:</strong> <%= @user.active_ticket_count %> 回</p>
              <p class="mb-1"><strong>残額合計:</strong> <%= number_to_currency(@user.remaining_ticket_value, unit: "¥", precision: 0) %></p>
              <p class="mb-0"><strong>最終使用日:</strong> <%= @user.last_usage_date&.strftime("%Y/%m/%d") || "未使用" %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- 使用履歴一覧 -->
      <h6 class="text-muted mb-3">使用履歴一覧</h6>
      <div class="table-responsive">
        <table class="table table-hover table-striped align-middle">
          <thead class="table-light">
            <tr>
              <th>使用日時</th>
              <th>チケット名</th>
              <th>使用回数</th>
              <th>残回数</th>
              <th>関連予約</th>
              <th>メモ</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% @ticket_usages.each do |usage| %>
              <tr>
                <td>
                  <div class="fw-bold"><%= usage.created_at.strftime('%Y/%m/%d') %></div>
                  <small class="text-muted"><%= usage.created_at.strftime('%H:%M') %></small>
                </td>
                <td>
                  <strong><%= usage.ticket.title %></strong>
                  <br>
                  <small class="text-muted">¥<%= number_with_delimiter(usage.ticket.ticket_template.price) %></small>
                </td>
                <td>
                  <span class="badge bg-primary">1 回</span>
                </td>
                <td>
                  <span class="badge bg-<%= usage.ticket.remaining_count > 0 ? 'success' : 'secondary' %>">
                    <%= usage.ticket.remaining_count %> / <%= usage.ticket.total_count %>
                  </span>
                </td>
                <td>
                  <% if usage.reservation %>
                    <%= link_to usage.reservation.start_time.strftime('%m/%d %H:%M'), 
                        admin_reservation_path(usage.reservation), 
                        class: "btn btn-sm btn-outline-info" %>
                  <% else %>
                    <span class="text-muted">なし</span>
                  <% end %>
                </td>
                <td>
                  <% if usage.note.present? %>
                    <span class="text-truncate d-inline-block" style="max-width: 150px;" 
                          title="<%= usage.note %>">
                      <%= usage.note %>
                    </span>
                  <% else %>
                    <span class="text-muted">—</span>
                  <% end %>
                </td>
                <td>
                  <%= link_to "詳細", admin_ticket_usage_path(usage), 
                      class: "btn btn-sm btn-outline-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @ticket_usages.empty? %>
        <div class="text-center py-4">
          <i class="fas fa-history fa-3x text-muted mb-3"></i>
          <p class="text-muted">チケット使用履歴がありません</p>
        </div>
      <% end %>

      <!-- ページネーション -->
      <div class="mt-3">
        <%= paginate @ticket_usages %>
      </div>
    </div>
  </div>
</div>
